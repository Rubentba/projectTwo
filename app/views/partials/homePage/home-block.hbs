  <div class="row">
    <div class="col s2">


      <div class="row">
        <div class="col s12">
          <div class="card purple darken-1 topsideCard">
            <div class="card-content white-text">
              
              <img class="materialboxed responsive-img circle" width="150" height="150" style="margin: 0 auto;" src="img/php-duck.jpg">
              <hr> 
              <h4>UserName</h4>
            </div>


          </div>
        </div>
      </div>

      <div class="card purple darken-1 bottomsideCard">
      <div class="card-action white-text">
        <h4>Friend's List</h4>
        <hr>
        <input type="text" id="searchFriend" placeholder="Search..">
        <div class = "friendList scrollBar left-align">
          {{friends}}

      </div>
        
      </div>
    </div>



    </div>
    <div class="col s8">


      <div class="row">
        <div class="col s12 parent">

          <div class="card grey darken-1 userPost">
            <div class="card-content white-text">
              <ul class="chatBox child " style="width: 95%; height: 90%; overflow: auto">
                <li><strong id="userName">Pengu</strong><br><span id="userPost">{{newPost}}</span>
                  <hr><br></li>




            </div>

          </div>
        </div>
      </div>


      <div class="container" id="textBox">


        <div class="col s12 middle ">
          <div class="row card grey darken-1">
            <div class="input-field col s10">
              <i class="material-icons prefix">textsms</i>
              <input type="text" id="autocomplete-input" class="autocomplete" data-length="255">
              <label for="autocomplete-input">Message<span></span></label>


            </div>
            <button class="btn waves-effect waves-light purple darken-2 col s2" id="messageBtn" type="submit"
              name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>

      </div>


    </div>

    <div class="col s2">

      <div class="row">
        <div class="col s12">
            <div class="card purple darken-1 sideCard">
                <div class="card-action white-text">
                  <h4>Games</h4>
                  <hr>
                  <input type="text" id="searchGame" placeholder="Search..">
                  <div class = "gameList scrollBar left-align">
                    {{games}}

                </div>
                  
                </div>
              </div>
        </div>
      </div>


    </div>

  </div>

